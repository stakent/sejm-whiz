# Environment Configuration Example
# Copy to .env and customize for your deployment

# Database Configuration
DATABASE_HOST=p7
DATABASE_PORT=5432
DATABASE_NAME=sejm_whiz
DATABASE_USER=sejm_whiz_user
DATABASE_PASSWORD=sejm_whiz_password
DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=p7
REDIS_PORT=6379

# Environment Settings
DEPLOYMENT_ENV=p7

# Embedding Configuration - Model Caching
EMBEDDING_MODEL_CACHE_DIR=./models
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=16
EMBEDDING_USE_FAST_TOKENIZER=false

# HerBERT Model Configuration
EMBEDDING_MODEL_NAME=allegro/herbert-klej-cased-v1
EMBEDDING_MAX_LENGTH=512
EMBEDDING_DIM=768

# Performance Settings
EMBEDDING_CACHE_EMBEDDINGS=true
EMBEDDING_CACHE_TTL=86400

# Legal Document Processing
EMBEDDING_CHUNK_SIZE=400
EMBEDDING_CHUNK_OVERLAP=50
EMBEDDING_MIN_TEXT_LENGTH=10
EMBEDDING_MAX_TEXT_LENGTH=50000
