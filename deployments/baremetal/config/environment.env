# Sejm-Whiz Baremetal Deployment Environment Configuration
# Copy this file to /etc/sejm-whiz/environment.env on p7 server

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sejm_whiz
DATABASE_USER=sejm_whiz_user
DATABASE_PASSWORD=sejm_whiz_password
DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Embedding Configuration
EMBEDDING_DEVICE=cpu
# EMBEDDING_DEVICE=cuda  # Uncomment for GPU support

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8001
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=8002
DATA_PROCESSOR_LOG_LEVEL=INFO

# Deployment Environment
DEPLOYMENT_ENV=p7_baremetal

# Python Path Configuration
PYTHONPATH=/opt/sejm-whiz/components:/opt/sejm-whiz/bases

# Installation Paths
INSTALL_DIR=/opt/sejm-whiz
CONFIG_DIR=/etc/sejm-whiz
LOG_DIR=/var/log/sejm-whiz
DATA_DIR=/var/lib/sejm-whiz

# Service User
SERVICE_USER=sejm-whiz
SERVICE_GROUP=sejm-whiz